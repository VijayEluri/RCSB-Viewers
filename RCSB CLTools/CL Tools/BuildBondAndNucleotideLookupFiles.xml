<!-- ?xml version="1.0" encoding="utf-8"? -->
<!--
 |  Downloads the component bond definition file from the site, generates the output
 |  component and nucleotide dictionary inputs, and jars them up.
 |
 |  ( in process - not working, yet - just getting the framework in place - rickb )
 |
 -->
<project name="BuildBondAndNucleotideLookupFiles" default="all" basedir=".">
  <target name="all">
  	<info>
  		<ftpsource id = "info.name" name="ftp://ftp.wwpdb.org/pub/pdb/data/monomers/components.cif.gz"/>
  		<classpath id="info.classpath">
  			<pathelement path="${project_dir}/bin"/>
  			<pathelement path="${project_dir}/../RCSB MBT Libs/bin"/>
  		</classpath>
  	</info>
    <get src="${info.ftpsource.name}" dest="components.cif.gz"/>
  	<java classname="org.rcsb.ex.tools.ChemicalComponentBondsCreator"
  		  classpathref="${info.classpath}">
  		<arg>COMPONENT_FILE</arg>
  	</java>
    <java classname="org.rcsb.ex.tools.FindAllNucleicAcidCompoundNames"
  		  classpathref="${info.classpath}">
    	<arg>COMPONENT_FILE</arg>
    </java>
  </target>
 </project>