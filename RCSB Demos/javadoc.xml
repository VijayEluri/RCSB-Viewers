<!-- ?xml version="1.0" encoding="utf-8"? -->
<!--
 |  Create Javadoc
 |
 |  This takes a bit more control of the javadoc generation process for this project.
 |
 -->
<project name="DoJavaDoc" default="all" basedir=".">
  <target name="all">
    <javadoc packagenames="org.rcsb.demo.*"
		     overview="./doc-in/overview.html"
    		 stylesheetfile="./doc-in/reference.css"
		     sourcepath="./MBT:./Utils"
             destdir="./doc"
             windowtitle="RCSB Demos">
      <doctitle><![CDATA[<h1>RCSB Demos</h1>]]></doctitle>
		  <bottom><![CDATA[<em>Copyright &#169; 2008 Regents of the University of California, All rights reserved.</em>]]></bottom>
    </javadoc>
  	<copy todir="doc">
  		<fileset dir="doc-in" >
  			<exclude name="reference" />
  		</fileset>
  	</copy>
  </target>
</project>
