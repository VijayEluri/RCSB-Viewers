<!-- ?xml version="1.0" encoding="utf-8"? -->
<!--
 |  Create Javadoc
 |
 |  This takes a bit more control of the javadoc generation process for this project.
 |
 -->
<project name="DoJavaDoc" default="all" basedir=".">
  <target name="all" depends="clean,mbt-lib,viewer-framework"/>
	
<!-- CLEAN -->
	
  <target name="clean">
  	<delete dir="./doc" />
  </target>
	
<!-- VIEWER FRAMEWORK -->
	
  <target name="viewer-framework" >
    <javadoc packagenames="org.rcsb.vf.*"
		     overview="./src/Framework/RCSB Viewer Framework/reference/overview.html"
    		 stylesheetfile="./src/reference/reference.css"
		     sourcepath="../RCSB Viewer Framework/UI:../RCSB Viewer Framework/GL Scene:../RCSB Viewer Framework/Controllers"
             destdir="./doc/Developer/RCSB Viewer Framework/reference"
             windowtitle="RCSB PDB - Viewer Framework">
      <doctitle><![CDATA[<h1>RCSB Viewer Framework</h1>]]></doctitle>
		  <bottom><![CDATA[<em>Copyright &#169; 2008 Regents of the University of California, All rights reserved.</em>]]></bottom>
    </javadoc>
  </target>
	
<!-- MBT LIBS -->
	
  <target name="mbt-lib">
  	<mkdir dir="./doc/Developer/RCSB MBT Libs/reference" />
    <javadoc packagenames="org.rcsb.mbt.*"
    		 stylesheetfile="./src/reference/reference.css"
		     sourcepath="../RCSB MBT Libs/Structure Model:../RCSB MBT Libs/UI:../RCSB MBT Libs/GL Scene:../RCSB MBT Libs/Controllers:../RCSB MBT Libs/Structure Loader"
             destdir="./doc/Developer/RCSB MBT Libs/reference"
             windowtitle="RCSB PDB - MBT Libs">
      <doctitle><![CDATA[<h1>RCSB MBT Libs</h1>]]></doctitle>
		  <bottom><![CDATA[<em>Copyright &#169; 2008 Regents of the University of California, All rights reserved.</em>]]></bottom>
    </javadoc>
